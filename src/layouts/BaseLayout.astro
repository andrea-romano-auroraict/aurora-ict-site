---
const { title = "Aurora ICT" } = Astro.props;
const description = "Virtual CTO & ICT Consulting for secure, scalable business growth.";
const siteUrl = "https://auroraict.com";
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Basic Meta -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title} | Aurora ICT</title>
    <meta name="description" content={description} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Source+Sans+3:wght@400;500&display=swap" rel="stylesheet">

    <!-- SEO / Social -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl} />

    <!-- Structured Data (Trust Signal) -->
    <script type="application/ld+json">
    {JSON.stringify({
      "@context": "https://schema.org",
      "@type": "ProfessionalService",
      "name": "Aurora ICT",
      "url": siteUrl,
      "areaServed": "AU",
      "description": description
    })}
    </script>
  </head>

  <body class="bg-[var(--color-bg)] text-slate-800 antialiased">
    <slot />
  </body>
</html>

<style>
  html, body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>