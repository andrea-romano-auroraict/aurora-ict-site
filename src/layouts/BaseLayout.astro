---
import "../styles/global.css";
import { ViewTransitions } from "astro:transitions";

const baseTitle = "Aurora ICT";
const defaultDescription =
  "AI-powered IT services â€” Virtual CTO, security, cloud, and delivery confidence for growing businesses.";
const { title = baseTitle, page = "home", description = defaultDescription } = Astro.props;

const siteUrl = Astro.site?.toString() ?? "https://auroraict.com.au";
const canonicalUrl = new URL(Astro.url.pathname, siteUrl);
const fullTitle = title === baseTitle ? baseTitle : `${title} | ${baseTitle}`;
const ogImage = new URL("/aurora-ict-logo.png", siteUrl).toString();

const bgClass =
  page === "home" ? "bg-home" :
  page === "services" ? "bg-services" :
  page === "industries" ? "bg-industries" :
  page === "case-studies" ? "bg-casestudies" :
  page === "insights" ? "bg-insights" :
  page === "about" ? "bg-about" :
  page === "contact" ? "bg-contact" :
  "bg-home";
---

<!doctype html>
<html lang="en">
  <head>
    <ViewTransitions />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonicalUrl.toString()} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Source+Sans+3:wght@400;500;600&display=swap" rel="stylesheet">

    <meta name="geo.region" content="AU-QLD" />
    <meta name="geo.placename" content="Brisbane" />

    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl.toString()} />
    <meta property="og:site_name" content={baseTitle} />
    <meta property="og:locale" content="en_AU" />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:alt" content="Aurora ICT" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <script type="application/ld+json">
      {JSON.stringify({
        "@context": "https://schema.org",
        "@type": "ProfessionalService",
        name: baseTitle,
        url: siteUrl,
        image: ogImage,
        description,
        email: "hello@auroraict.com.au",
        areaServed: "AU",
        address: {
          "@type": "PostalAddress",
          addressLocality: "Brisbane",
          addressRegion: "QLD",
          addressCountry: "AU"
        },
        serviceType: [
          "Virtual CTO",
          "IT strategy",
          "Cloud architecture",
          "Cyber risk reduction",
          "Project oversight",
          "AI enablement"
        ]
      })}
    </script>
  </head>
<script is:inline>
  function setHeaderOffset() {
    const header = document.querySelector(".site-header");
    const main = document.querySelector("main.page-main");
    if (!header || !main) return;

    const h = Math.ceil(header.getBoundingClientRect().height);

    // Apply to CSS var and directly to main padding for reliability
    document.documentElement.style.setProperty("--header-offset", `${h}px`);
    main.style.paddingTop = `${h}px`;
  }

  // Run now, after load, and after route transitions
  window.addEventListener("load", () => {
    setHeaderOffset();
    requestAnimationFrame(setHeaderOffset);
    setTimeout(setHeaderOffset, 200);
  });

  window.addEventListener("resize", setHeaderOffset);

  // Astro view transitions / client router (covers SPA navigation)
  document.addEventListener("astro:page-load", () => {
    setHeaderOffset();
    requestAnimationFrame(setHeaderOffset);
    setTimeout(setHeaderOffset, 200);
  });
</script>

  <body class={`antialiased text-slate-800 aurora-shell ${bgClass}`}>
    <slot />
  </body>
</html>
